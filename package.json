{
  "name": "alien.js",
  "version": "0.3.0",
  "description": "Future web library",
  "homepage": "https://alien.js.org/",
  "keywords": [
    "alien",
    "alienjs",
    "javascript",
    "html5",
    "css3",
    "animation",
    "es6",
    "ecmascript6"
  ],
  "author": "Patrick Schroen",
  "repository": {
    "type": "git",
    "url": "https://github.com/pschroen/alien.js"
  },
  "bugs": {
    "url": "https://github.com/pschroen/alien.js/issues"
  },
  "license": "MIT",
  "main": "build/alien.module.js",
  "scripts": {
    "build": "rollup -c && npm run build-uglify && npm run build-babel && npm run build-babel-uglify",
    "build-uglify": "rollup -c --environment uglify",
    "build-babel": "rollup -c --environment babel",
    "build-babel-uglify": "rollup -c --environment babel,uglify",
    "build-examples": "for x in `find examples -name 'rollup.config.js' -maxdepth 2 ! -path 'alien.js*' -exec dirname {} \\;`; do echo \"$x\"; cd \"$x\"; ln -sfn ../.. alien.js; rollup -c; rm -rf alien.js; cd ../..; done",
    "build-world": "npm run build && npm run build-examples",
    "dev": "rollup -c -w -m inline",
    "lint": "eslint src || exit 0"
  },
  "devDependencies": {
    "babel-preset-es2015-rollup": "^3.0.0",
    "eslint": "^3.19.0",
    "replace": "^0.3.0",
    "rollup": "^0.43.0",
    "rollup-plugin-babel": "^2.7.1",
    "rollup-plugin-eslint": "^3.0.0",
    "rollup-plugin-uglify": "^2.0.1",
    "rollup-watch": "^4.0.0",
    "uglify-es": "^3.0.23"
  }
}
